{
    "name": "react-wizard-onboarding",
    "version": "1.0.2",
    "description": "Pretty fancy onboarding wizard for your website, made in React.",
    "repository": {
        "type": "git",
        "url": "https://github.com/ChrisUser/react-wizard-onboarding.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc --p ./tsconfig-build.json && vite build --mode production",
        "build-docs": "tsc --p ./tsconfig-build-docs.json && vite build --mode docs",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "react-scripts test",
        "prepublishOnly": "npm run build"
    },
    "type": "module",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "files": [
        "dist"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/react": "^19.0.7",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.1.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "sass": "^1.69.4",
        "typescript": "^5.2.2",
        "vite": "^6.0.7",
        "vite-plugin-dts": "^4.5.0"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
